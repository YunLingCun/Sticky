<view>
    <van-nav-bar
            fixed
            title="孑一百科"
            left-text="返回"
            left-arrow
            bind:click-left="onClickLeft"
            open-type="share"
    />
    <view class="container">
        <van-image width="100" height="100" src="https://img.yzcdn.cn/vant/cat.jpeg"></van-image>
        <van-button class="login" wx:if="{{status=='unlogin'}}" type="primary" bind:getuserinfo="bindUserInfo"
                    open-type="getUserInfo">登录
        </van-button>
        <van-overlay show="{{status=='loading'}}">
            <view class="wrapper">
                <view class="block">
                    <van-loading size="48px" type="spinner" color="#1989fa" vertical>加载中...</van-loading>
                </view>
            </view>
        </van-overlay>
        <view class="loaded" wx:if="{{status=='loaded'}}">
            Loaded
        </view>
    </view>
</view>
